<UserControl x:Class="MochaEditor.NumericControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mocha="clr-namespace:MochaEditor"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <TextBox Name="NumericControlBox" PreviewTextInput="NumericControl_PreviewTextInput" 
        MouseLeftButtonDown="NumericControl_MouseLeftButtonDown" MouseLeftButtonUp="NumericControl_MouseLeftButtonUp"
                 TextChanged="NumericControl_TextChanged"/>
    </Grid>
</UserControl>
